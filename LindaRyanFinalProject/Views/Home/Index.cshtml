@{
    ViewData["Title"] = "Linda Ryan | 020080205";
}

<div class="text-center">
    <h1 class="display-4">Vehicle Dealership Inventory</h1>
    <h4>Choose a category to start managing your inventory:</h4>
    <br />
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">View All Vehicle Makes</h5>
                    <p class="card-text">View a list of existing vehicle makes or add a new make.</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="VehicleMakes" asp-action="Index">View Makes</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">View All Vehicle Models</h5>
                    <p class="card-text">View a list of existing vehicle models or add a new model.</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="VehicleModels" asp-action="Index">View Models</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">View All Vehicle Types</h5>
                    <p class="card-text">View a list of existing vehicle types or add a new type.</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="VehicleTypes" asp-action="Index">View Types</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">View Full Vehicle Inventory</h5>
                    <p class="card-text">View a list of existing vehicle inventory or add a new vehicle.</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="Vehicles" asp-action="Index">View Inventory</a>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <h4>Or, <a class="text-dark" asp-area="" asp-controller="Home" asp-action="About">Click Here</a> to learn more about this project.</h4>
</div>
