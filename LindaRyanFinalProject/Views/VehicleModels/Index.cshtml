@model IEnumerable<LindaRyanFinalProject.Models.VehicleModel>

@{
    ViewData["Title"] = "Vehicle Models";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Vehicle Models</h1>

<p>
    <a asp-action="Create">Add a New Vehicle Model</a>
</p>
<table class="table sortable table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EngineSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfDoors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EngineSize)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfDoors)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleType.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ModelId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ModelId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ModelId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
